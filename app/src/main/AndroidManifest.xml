<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network & background essentials -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- Android 13+ notifications runtime permission -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- DO NOT declare BIND_NOTIFICATION_LISTENER_SERVICE as a uses-permission.
         It is granted via Settings, and enforced on the <service> below. -->

    <!-- Optional: usage stats (untuk fitur “recent apps” di app picker).
         User harus mengaktifkan manual di Settings > Special access > Usage access -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- Visibility: untuk bisa menampilkan seluruh daftar aplikasi yang terpasang.
         Wajib dipertimbangkan bila target rilis Play Store (butuh justifikasi). -->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- (Opsional) query untuk beberapa kategori agar sebagian device tanpa QUERY_ALL tetap dapat menampilkan banyak aplikasi -->
    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:name="com.zerodev.smsforwarder.SmsForwarderApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMSForwarder"
        tools:targetApi="31">

        <!-- Disable default WorkManager initialization -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- Launcher -->
        <activity
            android:name="com.zerodev.smsforwarder.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SMSForwarder">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Boot Receiver: untuk re-setup service / reminder permission setelah reboot -->
        <receiver
            android:name="com.zerodev.smsforwarder.data.receiver.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- 🔥 Notification Router Service (inti konsep baru) -->
        <service
            android:name="com.zerodev.smsforwarder.data.service.NotifRouterService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>

        <!-- ❌ Dihapus: semua komponen SMS -->
        <!--
        <receiver android:name=".data.receiver.SmsReceiver" ... />
        <service android:name=".data.service.SmsForwardingService" ... />
        -->

    </application>
</manifest>
